@{
  Layout = "_Layout";
}

@using RestaurantCatalog.Models;
@model List<RestaurantCatalog.Models.Restaurant>;

<h1>RESTAURANTS!</h1>

@if (@Model.Count == 0)
{
  <h3>There are no restaurants listed!</h3>
} 

<ul>
@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId}) | @restaurant.Cuisine.Name</li>
}
</ul>
<p>@Html.ActionLink("Add new restaurant", "Create")</p>
  
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all cuisines", "Index", "Cuisines")</p>