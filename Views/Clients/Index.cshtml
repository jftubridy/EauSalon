@{
  Layout = "_Layout";
}

@using ClientCatalog.Models;
@model List<ClientCatalog.Models.Client>;

<h1>RESTAURANTS!</h1>

@if (@Model.Count == 0)
{
  <h3>There are no clients listed!</h3>
} 

<ul>
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
}
</ul>
<p>@Html.ActionLink("Add new client", "Create")</p>
  
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("See all stylists", "Index", "Stylists")</p>